{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dslrbooth-timer",
  "version": "0.1.0",
  "identifier": "com.agungkes.dslrbooth-timer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Timer",
        "width": 150,
        "height": 50,
        "backgroundColor": null,
        "resizable": false,
        "decorations": false,
        "fullscreen": false,
        "hiddenTitle": true,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
